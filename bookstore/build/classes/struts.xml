<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<constant name="struts.objectFactory" value="spring" />
	<package name="default" namespace="/" extends="struts-default">  
        
    </package>  
    
    <package name="user" namespace="/" extends="struts-default">
    	<action name="registerAction" class="registerAction" method="register">
        	<result name="success">/index.jsp</result>
        	<result name="error">/error.jsp</result>
        </action>
        <action name="loginAction" class="loginAction" method="login">
        	<result name="success">/index.jsp</result>
        	<result name="login">/login.jsp</result>
        </action>
    </package>
    
    <package name="book" namespace="/" extends="struts-default">
    	<action name="listBooksAction" class="listBooksAction" method="addToCart">
    		<result name="success">/book.jsp</result>
    		<result name="error">/error.jsp</result>
    	</action>
    </package>
</struts>    
